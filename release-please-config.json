{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "always-update": true,
  "packages": {
    "packages/core": {
      "release-type": "node",
      "package-name": "@autonoe/core",
      "changelog-path": "CHANGELOG.md",
      "component": "core"
    },
    "packages/claude-agent": {
      "release-type": "node",
      "package-name": "@autonoe/claude-agent",
      "changelog-path": "CHANGELOG.md",
      "component": "claude-agent"
    },
    "apps/cli": {
      "release-type": "node",
      "package-name": "@autonoe/cli",
      "changelog-path": "CHANGELOG.md",
      "component": "cli",
      "extra-files": ["src/version.ts"]
    }
  },
  "plugins": [
    {
      "type": "node-workspace",
      "updatePeerDependencies": true
    }
  ],
  "release-search-depth": 400,
  "include-component-in-tag": true
}
