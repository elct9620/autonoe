{
  "permissions": {
    "allow": [
      "Bash(bun init:*)",
      "Bash(bun add:*)",
      "Bash(bun install:*)",
      "Bash(bun run tsc:*)",
      "Bash(bun run check:*)",
      "Bash(bun run format:*)",
      "Bash(bun run compile:*)",
      "Bash(bun run test:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bun run format || true"
          }
        ]
      }
    ]
  }
}
